{
  "$schema": "http://json.schemastore.org/tsconfig",
  "display": "Renovate Changesets Action - Build Configuration",
  "extends": "@bfra.me/tsconfig",
  "compilerOptions": {
    // Incremental compilation for better performance
    "incremental": true,
    // Enable composite mode for project references
    "composite": true,
    "tsBuildInfoFile": ".tsbuildinfo",

    // Performance optimizations for incremental builds
    "assumeChangesOnlyAffectDirectDependencies": true,

    "target": "ES2022",
    "rootDir": "src",

    "module": "Preserve",
    // Module resolution
    "moduleResolution": "Bundler",
    // Enable declaration generation for type exports
    "declaration": true,
    "declarationMap": true,

    "emitDeclarationOnly": false,
    // Ensure proper emit (don't disable)
    "noEmit": false,
    // Package-specific output configuration
    "outDir": "dist",
    "sourceMap": true
  },

  // Include only source files for this package
  "include": ["src/**/*"],

  // Exclude test files and build artifacts
  "exclude": ["node_modules", "dist", "test/**/*", "**/*.test.ts", "**/*.spec.ts"]
}
