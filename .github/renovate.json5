{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'security:openssf-scorecard',
    'github>bfra-me/renovate-config#v3.12.1',
    'github>bfra-me/renovate-config:internal.json5#v3.12.1',
  ],
  automergeType: 'pr',
  packageRules: [
    {
      matchDepNames: ['python'],
      allowedVersions: '<=3.12',
    },
  ],
  postUpgradeTasks: {
    commands: ['pnpm run bootstrap', 'pnpm run fix', 'pnpm run format'],
    executionMode: 'branch',
  },
  prCreation: 'not-pending',
  rebaseWhen: 'auto',
}
