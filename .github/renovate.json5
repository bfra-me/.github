{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [':prImmediately', 'github>bfra-me/renovate-config#v2.4.0'],
  postUpgradeTasks: {
    commands: [
      'corepack enable',
      'pnpm install --frozen-lockfile --ignore-scripts',
      'git checkout -- .npmrc',
      'pnpm run format',
