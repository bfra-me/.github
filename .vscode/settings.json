{
    "cSpell.customDictionaries": {
        "custom": true,
        "project-words": {
            "addWords": true,
            "description": "Project Specific Words",
            "name": "project-words",
            "path": "${workspaceFolder}/.vscode/spellright.dict"
        }
    },

    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.organizeImports": "never"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnType": false,

    "eslint.options": {
        "flags": ["unstable_ts_config"]
    },
    // Silent the stylistic rules in you IDE, but still auto fix them
    "eslint.rules.customizations": [
        {"rule": "prettier/prettier", "severity": "off", "fixable": true}
    ],

    "explorer.fileNesting.enabled": false,

    "files.associations": {
        "workflow-templates/**/*.yaml": "github-actions-workflow",
        "workflow-templates/**/*.yml": "github-actions-workflow"
    },

    "github-actions.workflows.pinned.workflows": [
        ".github/workflows/main.yaml",
        ".github/workflows/renovate.yaml"
    ],

    "prettier.enable": false,

    "typescript.enablePromptUseWorkspaceTsdk": true,
    "typescript.tsdk": "node_modules/typescript/lib",

    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}
