{
  "name": "@bfra.me/.github",
  "version": "2.0.8",
  "description": "Defaults for the @bfra-me GitHub Organization",
  "keywords": [
    "github",
    "repository",
    "settings",
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bfra-me/.github.git"
  },
  "license": "MIT",
  "author": "Marcus R. Brown <git@mrbro.dev> (https://mrbro.dev/)",
  "type": "module",
  "scripts": {
    "bootstrap": "pnpm install --prefer-offline --loglevel error",
    "bump": "changeset version && pnpm bootstrap && pnpm run fix ",
    "check-format": "prettier --check .",
    "fix": "pnpm run lint --fix",
    "format": "prettier --write .",
    "lint": "eslint .",
    "release": "tsx ./scripts/release.ts"
  },
  "prettier": "@bfra.me/prettier-config",
  "devDependencies": {
    "@actions/exec": "1.1.1",
    "@bfra.me/eslint-config": "0.16.4",
    "@bfra.me/prettier-config": "0.15.1",
    "@changesets/cli": "2.28.1",
    "@svitejs/changesets-changelog-github-compact": "1.2.0",
    "@types/node": "22.13.4",
    "eslint": "9.20.1",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-prettier": "5.2.3",
    "jiti": "2.4.2",
    "prettier": "3.5.1",
    "tsx": "4.19.3",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.15.5"
}
