{
  "name": "@bfra.me/.github",
  "version": "4.2.4",
  "private": true,
  "description": "Defaults for the @bfra-me GitHub Organization",
  "keywords": [
    "github",
    "repository",
    "settings",
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bfra-me/.github.git"
  },
  "license": "MIT",
  "author": "Marcus R. Brown <git@mrbro.dev> (https://mrbro.dev/)",
  "type": "module",
  "scripts": {
    "bootstrap": "pnpm install --prefer-offline --loglevel warn",
    "build": "pnpm -r run build",
    "build:cache:clean": "tsx ./scripts/build-cache-manager.ts clean",
    "build:cache:clean-stale": "tsx ./scripts/build-cache-manager.ts clean-stale",
    "build:cache:info": "tsx ./scripts/build-cache-manager.ts info",
    "build:cache:validate": "tsx ./scripts/build-cache-manager.ts validate",
    "build:cache:warm": "tsx ./scripts/build-cache-manager.ts warm",
    "build:composite": "tsc --build tsconfig.build.json --verbose",
    "build:composite:clean": "tsc --build tsconfig.build.json --clean",
    "build:composite:force": "tsc --build tsconfig.build.json --force",
    "build:composite:validate": "tsc --build tsconfig.build.json --dry",
    "build:composite:watch": "tsc --build tsconfig.build.json --watch",
    "build:incremental:analyze": "tsx ./scripts/incremental-build-analyzer.ts analyze",
    "build:incremental:cache-info": "tsx ./scripts/incremental-build-analyzer.ts cache-info",
    "build:incremental:clean-stale": "tsx ./scripts/incremental-build-analyzer.ts clean-stale",
    "build:monitor": "tsx ./scripts/build-performance.ts",
    "build:monitor:build": "tsx ./scripts/build-performance.ts --phase=build",
    "build:monitor:json": "tsx ./scripts/build-performance.ts --format=json",
    "build:monitor:lint": "tsx ./scripts/build-performance.ts --phase=lint",
    "build:monitor:markdown": "tsx ./scripts/build-performance.ts --format=markdown",
    "build:monitor:test": "tsx ./scripts/build-performance.ts --phase=test",
    "build:monitor:type-check": "tsx ./scripts/build-performance.ts --phase=type-check",
    "bump": "changeset version && pnpm run build && pnpm run fix",
    "fix": "eslint --fix",
    "lint": "eslint",
    "prepare": "husky",
    "quality-check": "pnpm run type-check && pnpm run lint && pnpm run build && pnpm run test",
    "release": "tsx ./scripts/release.ts",
    "test": "vitest run",
    "type-check": "tsc --build tsconfig.json --noEmit",
    "type-check:build": "tsc --project tsconfig.build.json --noEmit",
    "typescript:audit": "tsx ./scripts/audit-typescript-references.ts",
    "typescript:cross-package-validation": "pnpm run typescript:audit && pnpm run typescript:validate-type-only && pnpm run build:composite:validate",
    "typescript:validate-type-only": "tsx ./scripts/validate-type-only-imports.ts",
    "workspace:check": "manypkg check",
    "workspace:export-dot": "tsx ./scripts/workspace-validate.ts --export=dot",
    "workspace:export-json": "tsx ./scripts/workspace-validate.ts --export=json",
    "workspace:export-mermaid": "tsx ./scripts/workspace-validate.ts --export=mermaid",
    "workspace:fix": "manypkg fix",
    "workspace:graph": "tsx ./scripts/workspace-validate.ts --tree",
    "workspace:standardize-scripts": "tsx ./scripts/workspace-validate.ts --standardize-scripts",
    "workspace:standardize-scripts:apply": "tsx ./scripts/workspace-validate.ts --standardize-scripts --apply",
    "workspace:validate": "tsx ./scripts/workspace-validate.ts"
  },
  "lint-staged": {
    "*.{js,json,jsx,md,toml,ts,tsx,yaml,yml}": [
      "eslint --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "prettier": "@bfra.me/prettier-config",
  "devDependencies": {
    "@bfra.me/eslint-config": "0.30.3",
    "@bfra.me/prettier-config": "0.16.1",
    "@bfra.me/tsconfig": "0.12.0",
    "@changesets/cli": "2.29.7",
    "@changesets/config": "3.1.1",
    "@changesets/should-skip-package": "0.1.2",
    "@changesets/types": "6.1.0",
    "@manypkg/cli": "0.25.1",
    "@manypkg/get-packages": "3.1.0",
    "@svitejs/changesets-changelog-github-compact": "1.2.0",
    "@types/node": "22.18.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.35.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "glob": "11.0.3",
    "husky": "9.1.7",
    "jiti": "2.5.1",
    "lint-staged": "16.1.6",
    "mdast-util-to-string": "4.0.0",
    "prettier": "3.6.2",
    "remark": "15.0.1",
    "remark-parse": "11.0.0",
    "remark-stringify": "11.0.0",
    "sort-package-json": "3.4.0",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "unified": "11.0.5",
    "vitest": "3.2.4"
  },
  "packageManager": "pnpm@10.16.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ],
    "overrides": {
      "jiti": "<2.2.0"
    }
  }
}
